{
    "plugins": ["import"],
    "extends": ["eslint:recommended", "plugin:prettier/recommended"],
    "rules": {
        "import/order": [
            "error",
            {
                "groups": [
                    "builtin",
                    "external",
                    "internal",
                    ["parent", "sibling", "index"]
                ],
                "newlines-between": "always",
                "alphabetize": {
                    "order": "asc",
                    "caseInsensitive": true
                }
            }
        ],
        "indent": ["error", 4]
    }
}
